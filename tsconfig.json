{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
